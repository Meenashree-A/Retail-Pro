    private void jButton11ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        try {
    String name = jTextField4.getText();
    String phno = jTextField1.getText();
    String id = jTextField2.getText(); // Assuming jTextFieldID is where you enter the ID
    
    String query = "UPDATE data SET name = ?, age = ? WHERE id = ?";
    Class.forName("com.mysql.jdbc.Driver");
    Connection con = DriverManager.getConnection(JDBC_URL, USERNAME, PASSWORD);
    PreparedStatement statement = con.prepareStatement(query);
    statement.setString(1, name);
    statement.setString(2, phno);
    statement.setString(3, id);
    
    int rowsUpdated = statement.executeUpdate();
    
    if (rowsUpdated > 0) {
        jTextField15.setText("Data updated successfully for ID: " + id);
    } else {
        jTextField15.setText("No data found for ID: " + id);
    }
    
    statement.close();
    con.close();
} catch (SQLException | ClassNotFoundException ex) {
    ex.printStackTrace();
}

    }                                         

