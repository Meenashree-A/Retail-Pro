    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         String type=jTextField4.getText();
        if(type.equals("Mobiles")){
             String id = jTextField5.getText();
           try {
    String query = "SELECT * FROM mobileshop WHERE serial_no = ?";
    Class.forName("com.mysql.jdbc.Driver");
    Connection con = DriverManager.getConnection(JDBC_URL, USERNAME, PASSWORD);
    PreparedStatement statement = con.prepareStatement(query);
    statement.setString(1,id );
    ResultSet resultSet = statement.executeQuery();

    if (resultSet.next()) {
         String bill = resultSet.getString("price");
        jTextField1.setText(bill);
    } else {
        jTextField1.setText("No details found for ID: " + id);
    }

    statement.close();
    resultSet.close();
    con.close(); // Close the connection when done
} catch (SQLException | ClassNotFoundException ex) {
    ex.printStackTrace();
} 
        }
    }                                        

