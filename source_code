    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
      try {
    Class.forName("com.mysql.cj.jdbc.Driver");
    Connection con = DriverManager.getConnection(JDBC_URL, USERNAME, PASSWORD);
    
    String i = jCheckBox1.isSelected() ? jLabel12.getText() : "";
    String i8 = jCheckBox1.isSelected() ? jLabel4.getText() : "";
    String p1 = jCheckBox1.isSelected() ? jLabel3.getText() : "";
    
    String F = jCheckBox2.isSelected() ? jLabel13.getText() : "";
    String F24 = jCheckBox2.isSelected() ? jLabel6.getText() : "";
    String p2 = jCheckBox2.isSelected() ? jLabel5.getText() : "";
    
    String M = jCheckBox3.isSelected() ? jLabel14.getText() : "";
    String M41 = jCheckBox3.isSelected() ? jLabel8.getText() : "";
    String p3 = jCheckBox3.isSelected() ? jLabel7.getText() : "";
    
    String S = jCheckBox4.isSelected() ? jLabel15.getText() : "";
    String S24 = jCheckBox4.isSelected() ? jLabel10.getText() : "";
    String p4 = jCheckBox4.isSelected() ? jLabel9.getText() : "";
    
    // Construct the SQL insert query with the appropriate number of placeholders
    String query = "INSERT INTO mobileshop (serial_no, brand, price) VALUES (?, ?, ?), (?, ?, ?), (?, ?, ?), (?, ?, ?)";
    PreparedStatement ps = con.prepareStatement(query);
    
    // Set values for the parameters
    ps.setString(1, i);
    ps.setString(2, p1);
    ps.setString(3, i8);
    
    ps.setString(4, F);
    ps.setString(5, F24);
    ps.setString(6, p2);
    
    ps.setString(7, M);
    ps.setString(8, M41);
    ps.setString(9, p3);
    
    ps.setString(10, S);
    ps.setString(11, S24);
    ps.setString(12, p4);
    
    // Execute the query
    ps.executeUpdate();
    
    // Show a success message
    JOptionPane.showMessageDialog(rootPane, "Billed successfully");
    
} catch (Exception ex) {
    ex.printStackTrace();
} 
this.setVisible(false);
            Payment obj=new Payment();
            obj.setVisible(true);


    }                                        

