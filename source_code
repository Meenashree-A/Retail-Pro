    }                                          

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
                  
try {
    Class.forName("com.mysql.cj.jdbc.Driver");
    Connection con = DriverManager.getConnection(JDBC_URL, USERNAME, PASSWORD);
    
    // Assign values based on checkbox selection
    String p1_2 = jCheckBox1.isSelected() ? jLabel22.getText() : "";
    String F21 = jCheckBox1.isSelected() ? jLabel2.getText() : "";
    String p1 = jCheckBox1.isSelected() ? jLabel3.getText() : "";
    String p2_2 = jCheckBox2.isSelected() ? jLabel23.getText() : "";
    String F24 = jCheckBox2.isSelected() ? jLabel7.getText() : "";
    String p2 = jCheckBox2.isSelected() ? jLabel8.getText() : "";
    String p3_2 = jCheckBox3.isSelected() ? jLabel24.getText() : "";
    String M41 = jCheckBox3.isSelected() ? jLabel9.getText() : "";
    String p3 = jCheckBox3.isSelected() ? jLabel10.getText() : "";
    String p4_2 = jCheckBox4.isSelected() ? jLabel25.getText() : "";
    String S24 = jCheckBox4.isSelected() ? jLabel11.getText() : "";
    String p4 = jCheckBox4.isSelected() ? jLabel12.getText() : "";
    String p5_2 = jCheckBox5.isSelected() ? jLabel26.getText() : "";
    String a59 = jCheckBox5.isSelected() ? jLabel14.getText() : "";
    String p5 = jCheckBox5.isSelected() ? jLabel18.getText() : "";
    String p6_2 = jCheckBox6.isSelected() ? jLabel27.getText() : "";
    String b = jCheckBox6.isSelected() ? jLabel15.getText() : "";
    String p6 = jCheckBox6.isSelected() ? jLabel19.getText() : "";
    String p7_2 = jCheckBox7.isSelected() ? jLabel28.getText() : "";
    String y = jCheckBox7.isSelected() ? jLabel16.getText() : "";
    String p7 = jCheckBox7.isSelected() ? jLabel20.getText() : "";
    String p8_2 = jCheckBox8.isSelected() ? jLabel29.getText() : "";
    String v = jCheckBox8.isSelected() ? jLabel17.getText() : "";
    String p8 = jCheckBox8.isSelected() ? jLabel21.getText() : "";
   
    // Construct your insert query here
    String query = "INSERT INTO mobileshop (serial_no, brand, price) VALUES   (?, ?, ?),(?, ?, ?),(?, ?, ?),(?, ?, ?),(?, ?, ?), (?, ?, ?),(?, ?, ?), (?, ?, ?)";
    PreparedStatement ps = con.prepareStatement(query);

    // Set parameters for the prepared statement
     ps.setString(1, p1_2);

    ps.setString(2, F21);
    ps.setString(3, p1);
    ps.setString(4, p2_2);
       ps.setString(5, F24);
    ps.setString(6, p2);
    ps.setString(7, p3_2);
    ps.setString(8, M41);
    ps.setString(9, p3);
    ps.setString(10, p4_2);

    ps.setString(11, S24);
    ps.setString(12, p4);
     ps.setString(13, p5_2);
    ps.setString(14, a59);
    ps.setString(15, p5);
    ps.setString(16, p6_2);
    ps.setString(17, b);
    ps.setString(18, p6);
    ps.setString(19, p7_2);
    ps.setString(20, y);
    ps.setString(21, p7);
    ps.setString(22, p8_2);
    ps.setString(23, v);
    ps.setString(24, p8);
    
    // Execute the update
    ps.executeUpdate();
    
    JOptionPane.showMessageDialog(rootPane, "Billed successfully");
    
    ps.close();
    con.close();
} catch (Exception ex) {
    ex.printStackTrace();
}
this.setVisible(false);
            Payment obj=new Payment();
            obj.setVisible(true);




    }                                        

